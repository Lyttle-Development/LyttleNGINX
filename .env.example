# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/lyttlenginx"

# Admin Configuration
ADMIN_EMAIL="admin@example.com"

# Security - CHANGE THESE IN PRODUCTION!
API_KEY="your-secure-api-key-change-this"
JWT_SECRET="your-jwt-secret-change-this-to-something-secure"
JWT_EXPIRATION="7d"

# Application Settings
NODE_ENV="production"
PORT="3000"

# Certificate Renewal Settings
RENEW_BEFORE_DAYS="30"

# Email/SMTP Configuration (Optional)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM=""

# Alert Webhooks (Optional)
SLACK_WEBHOOK_URL=""
DISCORD_WEBHOOK_URL=""

# Rate Limiting
RATE_LIMIT_TTL="60"
RATE_LIMIT_MAX="100"

# Docker Swarm / NFS Configuration (for global deployment)
NFS_SERVER="10.0.0.1"
NFS_PATH="/mnt/lyttlenginx/letsencrypt"

